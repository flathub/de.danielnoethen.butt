{
    "app-id": "de.danielnoethen.butt",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "butt",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=xdg-run/pipewire-0",
        "--talk-name=org.freedesktop.DBus.Properties",
        "--talk-name=org.mpris.MediaPlayer2.*",
        "--talk-name=org.gnome.Rhythmbox3"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "portaudio",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/PortAudio/portaudio/archive/refs/tags/v19.7.0.tar.gz",
                    "sha256": "5af29ba58bbdbb7bbcefaaecc77ec8fc413f0db6f4c4e286c40c3e1b83174fa0"
                }
            ]
        },
        {
            "name": "portmidi",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/PortMidi/portmidi/archive/refs/tags/v2.0.4.tar.gz",
                    "sha256": "64893e823ae146cabd3ad7f9a9a9c5332746abe7847c557b99b2577afa8a607c"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "fltk",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/fltk/fltk.git",
                    "tag": "release-1.3.9",
                    "commit": "a66273e72621887fcbd0ee5dca2dd133356d5d8a"
                }
            ]
        },
        {
            "name": "butt",
            "buildsystem": "simple",
            "build-commands": [
                "cd butt && ./configure --with-client --prefix=/app",
                "cd butt && make",
                "cd butt && make install",
                "cp -r butt/usr/share /app",
                "rm -r /app/share/icons/hicolor/512x512@2x",
                "find /app/share -type f -name '*.png' -not -name 'de.danielnoethen.butt.png' -execdir mv -v {} de.danielnoethen.butt.png \\;",
                "find /app/share -type f -name '*.svg' -not -name 'de.danielnoethen.butt.svg' -execdir mv -v {} de.danielnoethen.butt.svg \\;",
                "mv /app/share/applications/butt.desktop /app/share/applications/de.danielnoethen.butt.desktop",
                "sed -i '/  <launchable type=\"desktop-id\">butt.desktop<\\/launchable>/c\\  <launchable type=\"desktop-id\">de.danielnoethen.butt.desktop<\\/launchable>' /app/share/metainfo/de.danielnoethen.butt.metainfo.xml",
                "sed -i '/Icon=butt/c\\Icon=de.danielnoethen.butt' /app/share/applications/de.danielnoethen.butt.desktop"
            ],
            "sources": [
                {
                    "type": "archive",
                    "dest": "butt",
                    "url": "https://danielnoethen.de/butt/release/1.44.0/butt-1.44.0.tar.gz",
                    "sha256": "d910b40a10dbca1ce377ee239c146e4746e8b48550ba0a40d6b5199b5c87e0a7",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://danielnoethen.de/butt/",
                        "version-pattern": "Latest version: ([\\d\\.-]*)",
                        "url-template": "https://danielnoethen.de/butt/release/$version/butt-$version.tar.gz"
                    }
                },
                {
                    "type": "patch",
                    "path": "include-patch.patch"
                }
            ]
        }
    ]
}
